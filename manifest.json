{
  "manifest_version": 3,
  "name": "CodeTrail - Sync LeetCode to GitHub",
  "version": "1.1.0",
  "description": "Automatically sync your LeetCode solutions to GitHub with topic-based organization",
  "permissions": [
    "storage",
    "notifications",
    "webNavigation",
    "alarms",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "https://api.github.com/*",
    "https://leetcode.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://leetcode.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "utils/constants.js",
        "icons/*.png"
      ],
      "matches": [
        "https://leetcode.com/*"
      ]
    }
  ]
}